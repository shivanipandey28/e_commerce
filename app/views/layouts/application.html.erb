  </body>

  <nav class="navbar navbar-dark bg-primary">
  <!-- Navbar content -->
  
   <% if user_signed_in? %>
        <!-- Signed in as <%= current_user.email %>. This cannot be cheese? -->
        <div class='register'><%= link_to 'Sign out', destroy_user_session_path ,class: "a"%></div>
    <% else %>
        <div class='register'><%= link_to 'Register', new_user_registration_path %></div> 
    <% end %>
 

</nav>
        <%= yield %>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
    </body>
</html>
